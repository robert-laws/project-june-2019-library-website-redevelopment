mixin page-header(page, group)
  div(class="container page-header")
    div(class="row d-flex justify-content-between align-items-center")
      div(class="col-md-6 col-sm-12 page-header__title")
        div(class="float-left")= group
      div(class="col-md-6 col-sm-12 page-header__breadcrumbs")
        nav(aria-label="breadcrumb")
          ol(class="breadcrumb float-right")
            li(class="breadcrumb-item")
              a(href="/") Home
            if group == "parent"
              li(class="breadcrumb-item active" aria-current="page")= page
            else
              li(class="breadcrumb-item")
                a(href=(group.toLowerCase().replace(" ", "-") + ".html"))= group
              li(class="breadcrumb-item active" aria-current="page")= page
    div(class="row page-header__divider")
      div(class="col")
        hr